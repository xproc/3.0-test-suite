<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>AB choose-065</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-07-12</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for p:choose</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests collection() on p:choose</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="pipeline" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result" />
         
         <p:identity name="test-context">
            <p:with-input>
               <doc />
            </p:with-input>
         </p:identity>
         
         <p:identity>
            <p:with-input><right /></p:with-input>
         </p:identity>
         <p:choose>
            <p:with-input pipe="@test-context @test-context @test-context" />
            <p:when test="count(collection())=2" collection="true">
               <p:identity>
                  <p:with-input><wrong /></p:with-input>
               </p:identity>
            </p:when>
            <p:when test="count(collection())=3" collection="true">
               <p:identity />
            </p:when>
            <p:otherwise>
               <p:identity>
                  <p:with-input><wrong /></p:with-input>
               </p:identity>
            </p:otherwise>
         </p:choose>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="right">The root element is not 'right'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>