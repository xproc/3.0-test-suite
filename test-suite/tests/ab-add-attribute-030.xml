<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Add-attribute-030 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-03-04</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New test for p:add-attribute.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests adding attribute "xml:base"</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc"
         xmlns:html="http://www.w3.org/1999/xhtml">
         <p:output port="result" />
         
         
         <p:add-attribute match="doc" attribute-name="xml:base" attribute-value="http://www.my-fancy.uri">
            <p:with-input>
               <doc/>
            </p:with-input>
         </p:add-attribute>
         
         <p:identity>
            <p:with-input><result>{base-uri(/doc)}</result></p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="/result">Root element is not result.</s:assert>
               <s:assert test="result/text()='http://www.my-fancy.uri'">Text child of result is not 'http://www.my-fancy.uri'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>