<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:pipe 023 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-09-01</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for p:pipe</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests pipe shortcut on primary output ports.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" 
                      xmlns:test="http://test" version="3.0">
         <p:output port="result" primary="false">
            <p:pipe />
         </p:output>        
         <p:declare-step type="test:test">
            <p:output port="result" primary="true" />
            <p:output port="secondary">
               <secondary />
            </p:output>
            
            <p:identity>
               <p:with-input>
                  <result />
               </p:with-input>
            </p:identity>
         </p:declare-step>
         
         <test:test />
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">Root element is result.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
