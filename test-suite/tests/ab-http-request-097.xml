<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0"  expected="pass">
   <t:info>
      <t:title>http-request-097 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-18</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Simple test for p:http-request with follow-redirect set to 0.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request href="http://localhost:8246/service/over-here"
            parameters="map{'follow-redirect' : 0}">
            <p:with-input>
               <p:empty />
            </p:with-input>
         </p:http-request>
         
         <p:identity>
            <p:with-input pipe="report" />
         </p:identity>
         
         <p:identity>
            <p:with-input><result>{.?status-code}</result></p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not result.</s:assert>
               <s:assert test="starts-with(result/text(),'30')">The status-code is not '30x'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>