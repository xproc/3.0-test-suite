<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" xmlns:err="http://www.w3.org/ns/xproc-error" expected="fail" code="err:XD0042">
   <t:info>
      <t:title>Output port 31 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-09-28</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests that XD0042 is raised if document with wrong content type appears on p:output.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
        <p:output port="result" />
         
        <p:try>
          <p:output port="result"/>
          <p:error code="error">
             <p:with-input><error /></p:with-input>
          </p:error>
           <p:catch code="error">
              <p:output port="result" content-types="text/plain" />
              <p:identity>
                 <p:with-input><doc /></p:with-input>
              </p:identity>
           </p:catch>
         </p:try>
      </p:declare-step>
   </t:pipeline>
</t:test>