<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>http-request-089 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-15</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>This test checks to see if the processor identifies XML content types
         when an explicit charset parameter is specified. (Inspired by http-request #014)</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request method="post" href="http://localhost:8246/service/fixed-rdf-charset">
            <p:with-input><c:content xmlns:c="http://www.w3.org/ns/xproc-step" /></p:with-input>
         </p:http-request>
         
         <p:identity>
            <p:with-input><result>{p:document-property(., 'content-type')}</result></p:with-input>   
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
          <s:pattern>
            <s:rule context="/">
               <s:assert test="result/text()='application/rdf+xml'">The content-type is not correct.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
   
</t:test>