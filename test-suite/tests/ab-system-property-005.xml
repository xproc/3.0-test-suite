            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added tests for p:system-property</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:system-property().</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc"
                      xmlns:xs="http://www.w3.org/2001/XMLSchema">
         <p:output port="result"/>
         <p:identity>
            <p:with-input>
               <result>{p:system-property('Q{http://www.w3.org/ns/xproc}vendor-uri') castable as xs:anyURI}</result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not result.</s:assert>
               <s:assert test="result/text()='true'">Text node of result is not 'true'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>