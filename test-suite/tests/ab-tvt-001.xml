<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>TVT test 001 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-04-05</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests variable and fixed parts in TVT are correctly handled.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests TVTs.</p>
   </t:description>
   
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" 
                      xmlns:xs="http://www.w3.org/2001/XMLSchema" name="pipeline" version="3.0">
         <p:output port="result"/>
         
         <p:identity>
            <p:with-input>
               <result xmlns="">{{Hello}}{p:system-property('Q{http://www.w3.org/ns/xproc}psvi-supported') castable as xs:boolean}</result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns prefix="c" uri="http://www.w3.org/ns/xproc-step"></s:ns>
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">Root element is not 'result'.</s:assert>
               <s:assert test="result/text()='{Hello}true'">The text child of result is not '{Hello}true'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>