<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Output port declaration 014 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-05-09</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New tests</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests pipe on output port declaration</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="main" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         
        <p:input port="source">
            <doc />
         </p:input>
         <p:output port="result" />
        
         <p:viewport match="/*" name="viewport">
            <p:group>
               <p:output port="result">
                  <p:pipe step="viewport" port="current" />
               </p:output>
               <p:identity>
                  <p:with-input><doc-x/></p:with-input>
               </p:identity>
            </p:group>
         </p:viewport>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The pipeline root is not doc.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>