<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>http-request-001 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-12</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request (Ported from 1.0).</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:http-request.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request href="http://localhost:8246/service/fixed-xml" method="get">
            <p:with-input><p:empty /></p:with-input>
         </p:http-request>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The document root is not doc.</s:assert>
               <s:assert test="doc/title/text()='Sample document'">The document title is not 'Sample document'.</s:assert>
               <s:assert test="doc/p/text()='Hello world!'">The text in p is not 'Hello world!'</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>