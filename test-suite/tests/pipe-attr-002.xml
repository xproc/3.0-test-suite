<test xmlns='http://xproc.org/ns/testsuite/3.0'
      xmlns:err="http://www.w3.org/ns/xproc-error"
      expected="fail" code="err:XS0082">
  <pipeline>
<p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                name="main"
                version="3.0">
  <p:output port="result"/>

  <p:identity name="one">
    <p:with-input port="source">
      <doc>One</doc>
    </p:with-input>
  </p:identity>

  <p:identity name="two">
    <p:with-input port="source">
      <doc>Two</doc>
    </p:with-input>
  </p:identity>

  <p:identity name="three">
    <p:with-input port="source">
      <doc>Three</doc>
    </p:with-input>
  </p:identity>

  <p:identity name="combined">
    <p:with-input port="source" pipe="three two one">
      <p:document href="pipe.xpl"/>
    </p:with-input>
  </p:identity>

  <p:wrap-sequence wrapper="docs"/>
</p:declare-step>
  </pipeline>
</test>
