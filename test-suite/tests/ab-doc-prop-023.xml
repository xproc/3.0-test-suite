<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>ab-doc-props-023</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-12-14</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added declaration for prefix "xs".</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-10-03</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Initial submit</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests value for key 'serialization' in document properties is map{xs:QName, item()*}.</p>
   </t:description>
   
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc"
                                    xmlns:xs="http://www.w3.org/2001/XMLSchema"
                                    xmlns:map="http://www.w3.org/2005/xpath-functions/map">
         <p:output port="result" />
         
         <p:identity>
            <p:with-input>
               <p:inline document-properties="map{'serialization' : map{xs:QName('indent') : true() }}"><doc /></p:inline>
            </p:with-input>
         </p:identity>
         
         <p:identity>
            <p:with-input>
               <result>{map:get(p:document-property(., xs:QName('serialization')), xs:QName('indent'))}</result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not result.</s:assert>
               <s:assert test="result/text()='true'">Text node of result is not 'true'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
