<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0"
       xmlns:err="http://www.w3.org/ns/xproc-error"
       expected="fail" code="err:XD0001" features="p-run">
   <t:info>
      <t:title>p:run-062</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2022-10-01</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added tests for p:run</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:run: Checks implicit non-primary p:output does not become context-item.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         <p:run>
            <p:with-input>
               <p:inline>
                  <p:declare-step version="3.0">
                     <p:output port="result" primary="false"/>
                     <p:identity >
                        <p:with-input><result >42</result></p:with-input>
                     </p:identity>
                  </p:declare-step>
               </p:inline>
            </p:with-input>
            <p:output port="result" />
            <p:output port="secondary" />
         </p:run>    
         <p:add-attribute attribute-name="att" attribute-value="{/result}">
            <p:with-input><doc /></p:with-input>
         </p:add-attribute>
      </p:declare-step>
   </t:pipeline>
</t:test>