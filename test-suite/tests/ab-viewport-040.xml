<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>viewport-040 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-04-20</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New test</p>
            </t:description>
         </t:revision>
         
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Test document in <code>p:viewport</code> has proper base-uri.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"  xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"  />
         <p:input port="source">
            <p:inline document-properties="map{'base-uri' : 'http:/dummy-base-uri'}">
               <doc />
            </p:inline>
         </p:input>
         <p:viewport match="doc" name="viewport">
            <p:identity>
               <p:with-input><result>{p:document-property(., 'base-uri')}</result></p:with-input>
            </p:identity>
         </p:viewport>
      </p:declare-step>
      
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The root element is not 'result'.</s:assert>
               <s:assert test="result/text()='http:/dummy-base-uri'">The base uri is not correctly set.</s:assert>            
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>