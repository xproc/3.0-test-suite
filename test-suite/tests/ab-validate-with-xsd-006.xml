<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass"
        features="p-validate-with-xsd">
  <t:info>
    <t:title>ab-validate-with-xsd-006</t:title>
    <t:revision-history>
      <t:revision>
        <t:date>2019-08-01</t:date>
        <t:author>
          <t:name>Achim Berndzen</t:name>
        </t:author>
        <t:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Initial publication</p>
        </t:description>
      </t:revision>
    </t:revision-history>
  </t:info>
  <t:description xmlns="http://www.w3.org/1999/xhtml">
    <p>Test p:validate-with-xml-schema with location-hints</p>
  </t:description>
  <t:pipeline>
<p:declare-step name="pipeline" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
<p:output port="result"/>

<p:validate-with-xml-schema use-location-hints="true">
    <p:with-input port="source" href="../documents/xsd-document.xml"/>
    <p:with-input port="schema">
      <p:empty/>
    </p:with-input>
  </p:validate-with-xml-schema>
</p:declare-step>
</t:pipeline>

  <t:schematron>
    <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
      <s:pattern>
        <s:rule context="/">
          <s:assert test="doc">The element root is not “doc”.</s:assert>
          <s:assert test="doc/p">Element root does not have child 'p'.</s:assert>
        </s:rule>
      </s:pattern>
    </s:schema>
  </t:schematron>
</t:test>
