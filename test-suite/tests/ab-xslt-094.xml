<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        features="xslt-3"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>AB-xslt-094</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2025-01-05</t:date>
            <t:author>
               <t:name>Norm Tovey-Walsh</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Change test to reflect changes adopted in 3.1. Itâ€™s no longer possible
               to distinguish between an absent global context item and explicitly setting
               it to the empty sequence.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2021-06-10</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added attribute 'queryBinding' to schematron's schema.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2020-06-11</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added tests for p:xslt with version="3.0".</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests global-context-item is set correctly.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:xslt version="3.0">
            <p:with-option name="global-context-item"
                           select="()"/>
            <p:with-input>
               <doc att="present"/>
            </p:with-input>
            <p:with-input port="stylesheet">
               <xsl:stylesheet version="3.0"
                               xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
                               xmlns:xs="http://www.w3.org/2001/XMLSchema">
                  <xsl:variable name="gci"
                                as="xs:string?">
                     <xsl:try>
                        <xsl:sequence select="./doc/@att"/>
                        <xsl:catch>
                           <xsl:value-of select="'absent'"/>
                        </xsl:catch>
                     </xsl:try>
                  </xsl:variable>
                  <xsl:template match="/">
                     <result>
                        <xsl:value-of select="$gci"/>
                     </result>
                  </xsl:template>
               </xsl:stylesheet>
            </p:with-input>
         </p:xslt>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not 'result'.</s:assert>
               <s:assert test="result/text()='present'">The text in result is not 'present'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
