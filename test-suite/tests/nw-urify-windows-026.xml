<?xml version="1.0" encoding="utf-8"?>
<t:test xmlns:err="http://www.w3.org/ns/xproc-error"
        xmlns:t="http://xproc.org/ns/testsuite/3.0"
        features="urify-windows"
        expected="fail"
        code="err:XD0076">
   <t:info>
      <t:title>nw-urify-windows-026</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2021-10-10</t:date>
            <t:author>
               <t:name>Norman Walsh</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Test for the <code>p:urify()</code> function on Windows.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description>Resolve a string with an implicit scheme with a relative path
 with an authority against an absolute file URI on drive D:.</t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" name="pipeline" version="3.0">
         <p:output port="result"/>
         <p:identity>
            <p:with-input>
               <result>{p:urify("//authority",
                             "file:///D:/Users/Jane%20Doe/Documents/")}</result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
</t:test>
