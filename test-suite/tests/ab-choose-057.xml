<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>AB choose-057</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2021-06-10</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added attribute 'queryBinding' to schematron's schema.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-10-19</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for p:choose</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests (explicit) primary output port accepts union of content-types</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="pipeline"
                      version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:identity>
            <p:with-input>
               <p:inline content-type="text/plain">A text.</p:inline>
               <p:inline content-type="text/plain">Another text.</p:inline>
            </p:with-input>
         </p:identity>
         <p:choose>
            <p:when test="false()">
               <p:output port="result"
                         content-types="application/xml"/>
               <p:insert match="/"
                         position="last-child">
                  <p:with-input>
                     <doc/>
                  </p:with-input>
                  <p:with-input port="insertion">
                     <element/>
                  </p:with-input>
               </p:insert>
            </p:when>
            <p:otherwise>
               <p:output port="result"
                         sequence="true"
                         content-types="text/plain"/>
               <p:identity/>
            </p:otherwise>
         </p:choose>
         <p:count/>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:ns prefix="c"
               uri="http://www.w3.org/ns/xproc-step"/>
         <s:pattern>
            <s:rule context="/">
               <s:assert test="c:result">The root element is not 'c:result'.</s:assert>
               <s:assert test="c:result/text()='2'">Text child of 'c:result' is not '2'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>