   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests select on p:with-input/@select resulting in an atomic value.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                      xmlns:xs="http://www.w3.org/2001/XMLSchema" version="3.0">
            <p:output port="result"/>
            
         <p:identity>
            <p:with-input select="32">
               <p:empty />
            </p:with-input>
         </p:identity>
         
         <p:identity>
            <p:with-input><result>{if (. instance of xs:integer) then .+10 else 0}</result></p:with-input>
         </p:identity>
            
        </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns prefix="p" uri="http://www.w3.org/ns/xproc"/>
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">Document root is not 'result'.</s:assert>
               <s:assert test="result/text()='42'">'result' does not a text child with value '42'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>