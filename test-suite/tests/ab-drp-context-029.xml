<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>AB-context-p:finally-001</t:title>
        <t:revision-history>
             <t:revision>
                <t:date>2019-07-24</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New test</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests port "error" is context node for TVT in finally.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
				        xmlns:c="http://www.w3.org/ns/xproc-step"  version="3.0">
            <p:output port="result"/>
            <p:try name="try">
                <p:error code="error" >
                  <p:with-input><ERROR>failure</ERROR></p:with-input>
                </p:error>

                <p:catch>
                    <p:identity>
                        <p:with-input><irrelevant /></p:with-input>
                    </p:identity>
                </p:catch>
                <p:finally>
                    <p:output port="finally" primary="false" pipe="@producer"/>
                    <p:identity name="producer">
                        <p:with-input>
                            <result>{/c:errors/c:error/ERROR/text()}</result>
                        </p:with-input>
                    </p:identity>
                </p:finally>
            </p:try>
            
            <p:identity>
                <p:with-input pipe="finally@try"/>
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/result">Document root is not named 'result'.</s:assert>
                    <s:assert test="count(*) = 1">Document does not have exactly one child element.</s:assert>
                    <s:assert test="/result/text() = 'failure'">Element 'result' has the wrong content.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
