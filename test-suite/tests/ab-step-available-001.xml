<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>Step available 001 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-12-08</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>Initial test</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>        <p>Tests function p:step-available on atomic step declaration without subpipeline.</p></p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                        xmlns:ex="http://example.com/ns/xproc-extensions"
                        name="main" version="3.0">
            <p:output port="result"/>
            
            <p:declare-step type="ex:unimplemented">
                <p:input port="source"/>
                <p:output port="result"/>
            </p:declare-step>
            
            <p:identity>
                <p:with-input>
                    <result>{p:step-available('ex:unimplemented')}</result>
                </p:with-input>
            </p:identity>

        </p:declare-step>
    </t:pipeline>

    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">

            <s:pattern>
                <s:rule context="/">
                    <s:assert test="result">The document root is not “result”.</s:assert>
                    <s:assert test="result/text()='false'">The text value of “result” is not 'false'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>