<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0"
        xmlns:err="http://www.w3.org/ns/xproc-error"
        expected="fail" code="err:XD0019">
   <t:info>
      <t:title>p:text-sort-019 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-09-01</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Some tests for p:text-sort</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:text-sort: XD0019 must be raised if @order is neither 'ascending' nor 'descending'.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>        
      
         <p:text-sort order="arbitrary">
            <p:with-input>
               <p:inline content-type="text/plain">A
B
V
D
X</p:inline>
            </p:with-input>             
         </p:text-sort>
         <p:wrap-sequence wrapper="wrapper" />
      </p:declare-step>
   </t:pipeline>
</t:test>
