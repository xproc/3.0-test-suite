<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>AB use-when-004</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-07-13</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported tests for @use-when from 1.0 test suite.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests that p:use-when is applied to elements not in the XProc namespace.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="pipeline" 
            xmlns:p="http://www.w3.org/ns/xproc"
            xmlns:ex="http://example.org/ns/pipelines" version="3.0">
         <p:output port="result" />
         
         <p:declare-step type="ex:supported-step">
            <p:output port="result"/>
            <p:identity>
               <p:with-input port="source"><success /></p:with-input>
            </p:identity>
         </p:declare-step>
         
         <ex:supported-step p:use-when="true()"/>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="success">The document root is not 'success'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>