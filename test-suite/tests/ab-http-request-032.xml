<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>http-request-032 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-12</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request (Ported from 1.0).</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:http-request: post with binary payload to a responder.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request href="http://localhost:8246/service/echo" method="post">
            <p:with-input>
               <p:document content-type="image/png" href="../documents/Kanava.png" />
            </p:with-input>
         </p:http-request>
         
         <p:cast-content-type content-type="application/xml" />
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:ns prefix="c" uri="http://www.w3.org/ns/xproc-step" />
           <s:pattern>
            <s:rule context="/">
               <s:assert test="c:data">The root element is not 'c:data'.</s:assert>
               <s:assert test="c:data/@content-type='image/png'">The content-type attribute is not 'image/png".</s:assert>
               <s:assert test="starts-with(replace(c:data/text(),'&#10;',''), 'iVBORw0KGgoAAAANSUhEUgAAASwAAACWCAYAAABkW7XSAAAAAXNSR0IArs4c') and
                  ends-with(replace(c:data/text(),'&#10;',''),'uQ4xzXIp2zJhAklfSuwLynDEe8H8KTcyan5ntBbRQbHDA4YHAg+jnw/wF+qfGjC/OmrgAAAABJRU5ErkJggg==')">The content is not right.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
