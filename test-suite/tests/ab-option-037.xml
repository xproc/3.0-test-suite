<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Option declaration 037 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-06-08</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Checks that a short cut for an array is interpreted as XPath expression.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" 
                      xmlns:test="http://xproc.org/ns/testsuite/3.0/demo"
                      xmlns:xs="http://www.w3.org/2001/XMLSchema" version="3.0">
            <p:output port="result"/>

            <p:declare-step type="test:test">
               <p:output port="result" />
               <p:option name="option" as="array(*)" required="true" />
               
               <p:identity>
                  <p:with-input><result>{$option?1}</result></p:with-input>
               </p:identity>
            </p:declare-step>
         
            <test:test option="['value', 'something else']"/>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The pipeline root is not result.</s:assert>
               <s:assert test="result/text()='value'">The text child of root element is not 'value'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>