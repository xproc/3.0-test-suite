<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>Step available 015 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-12-08</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>Initial test</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests function p:step-available on imported [private] step.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                        xmlns:ex="http://example.com/ns/xproc-extensions"
                        name="main" version="3.0">
            <p:import href="../pipelines/ab-import-step-002.xpl" />
            <p:output port="result"/>
            
            <p:choose>
                <p:when test="p:step-available('Q{http://some-extension.org}step')">
                    <p:identity>
                        <p:with-input><right /></p:with-input>
                    </p:identity>
                </p:when>
                <p:otherwise>
                    <p:identity>
                        <p:with-input><wrong /></p:with-input>
                    </p:identity>
                </p:otherwise>
            </p:choose>
        </p:declare-step>
    </t:pipeline>

    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">

            <s:pattern>
                <s:rule context="/">
                    <s:assert test="right">The document root is not “right”.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>