<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Variable declaration 044</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-07-12</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New tests.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Checks collection on p:variable</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="pipeline" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result" />
         
         <p:identity name="test-context">
            <p:with-input><doc /></p:with-input>
         </p:identity>
         <p:variable name="var" select="count(collection())" collection="true">
            <p:pipe step="test-context" />
            <p:inline><in1 /></p:inline>
            <p:pipe step="test-context" />
            <p:inline><in2 /></p:inline>
            <p:pipe step="test-context" />
         </p:variable>        
         
         <p:identity>
            <p:with-input><result>{$var}</result></p:with-input>
         </p:identity>
         
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The root element is not 'result'.</s:assert>
               <s:assert test="result/text()='5'">The root element does not have a text child with '5'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>