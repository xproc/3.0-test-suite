   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:run: Tests QName magic on run-option</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc"
         xmlns:xs = "http://www.w3.org/2001/XMLSchema"
         xmlns:map ="http://www.w3.org/2005/xpath-functions/map"
         xmlns:test="http://test">
         <p:output port="result" />
         <p:run>
            <p:with-input>
               <p:inline expand-text="false">
                  <p:declare-step version="3.0">
                     <p:output port="result" />
                     <p:option name="opt" as="map(xs:QName, xs:string)" required="true" />
                     <p:identity>
                        <p:with-input><result>{map:keys($opt)[1] instance of xs:QName}</result></p:with-input>
                     </p:identity>
                  </p:declare-step>
               </p:inline>
            </p:with-input>
            <p:run-option name="opt" select="map{'key':'value'}" />
            <p:output port="result" />
         </p:run>    
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
         xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The root element is not result.</s:assert>
               <s:assert test="result/text()='true'">The text value of 'result' is not 'true'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
