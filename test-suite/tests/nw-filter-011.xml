<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>p:filter 011 (NW)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2024-05-08</t:date>
            <t:author>
               <t:name>Norm Tovey-Walsh</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Test p:filter</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:filter with dynamic options and a dynamic selection where the in-scope
      binding is named ‘select’.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0"
                xmlns:xs="http://www.w3.org/2001/XMLSchema">
         <p:output port="result"/>
         <p:option name="select" as="xs:string?" select="'chapter'"/>
         <p:variable name="eq" select="'='"/>

         <p:identity>
           <p:with-input>
             <book>
               <chapter>Hello, world.</chapter>
               <appendix>Goodbye, world.</appendix>
             </book>
           </p:with-input>
         </p:identity>

         <p:filter select="/book/*[local-name(.) {$eq} $select]"/>

         <p:wrap-sequence wrapper="result"/>
      </p:declare-step>
   </t:pipeline>

   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:ns prefix="c"
               uri="http://www.w3.org/ns/xproc-step"/>
         <s:pattern>
            <s:rule context="/*">
               <s:assert test="self::result">The result root is not result.</s:assert>
               <s:assert test="chapter">There is no chapter child.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
