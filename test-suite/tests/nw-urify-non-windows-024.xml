<?xml version="1.0" encoding="utf-8"?>
<t:test xmlns:err="http://www.w3.org/ns/xproc-error"
        xmlns:t="http://xproc.org/ns/testsuite/3.0"
        features="urify-non-windows"
        expected="fail"
        code="err:XD0077">
   <t:info>
      <t:title>nw-urify-non-windows-024</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2021-10-10</t:date>
            <t:author>
               <t:name>Norman Walsh</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Test for the <code>p:urify()</code> function not on Windows.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Resolve a string with an explicit, non-hierarchical urn URI scheme 
 against an absolute file URI.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" name="pipeline" version="3.0">
         <p:output port="result"/>
         <p:identity>
            <p:with-input>
               <result>{p:urify("urn:publicid:ISO+8879%3A1986:ENTITIES+Added+Latin+1:EN",
                             "file:///home/jdoe/documents/")}</result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
</t:test>
