<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        features="p-validate-with-relax-ng"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>nw-validate-with-rng-002</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2025-12-06</t:date>
            <t:author initials="ndw">
               <t:name>Norm Tovey-Walsh</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Initial version</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests the dtd-default-attributes option.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="pipeline"
                      version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:validate-with-relax-ng dtd-attribute-values="false">
            <p:with-input port="source" href="../documents/rng-def-attr.xml"/>
            <p:with-input port="schema" href="../documents/rng-def-attr.rnc"/>
         </p:validate-with-relax-ng>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="document">The pipeline root is not “document”.</s:assert>
            </s:rule>
            <s:rule context="document">
               <s:assert test="not(@status)">There’s a “status” attribute.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
