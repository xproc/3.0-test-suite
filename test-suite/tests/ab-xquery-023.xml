<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass" features="xquery_3_1">
   <t:info>
      <t:title>p:xquery 023 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-09-30</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added explicit request for xquery version 3.1</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-09-13</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests for p:xquery (Partly ported from 1.0)</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:xquery: JSON map can be used as variable in XQuery 3.1</p>
   </t:description>
   
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>
         
         <p:xquery parameters="map{'map' : map{'key' : 'value'}}" version="3.1">
            <p:with-input port="source"><p:empty/></p:with-input>
            <p:with-input port="query">
               <p:inline content-type="text/plain">
                  declare namespace map="http://www.w3.org/2005/xpath-functions/map";
                  declare variable $map external;
                  &lt;result&gt;{{map:get($map, 'key')}}&lt;/result&gt;
               </p:inline>
            </p:with-input>
         </p:xquery>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">Root element is not 'result'.</s:assert>
               <s:assert test="result/text()='value'">Root element does not have text 'value'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>