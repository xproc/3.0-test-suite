<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Attribute value templates 007 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-04-13</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New test</p>
            </t:description>
         </t:revision>
         
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests AVTs.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"  xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:identity>
            <p:with-input><doc a="3">text</doc></p:with-input>
         </p:identity>
         <p:add-attribute match="/*" attribute-name="avt" attribute-value="{doc/text()}:{doc/@a}">
            <p:with-input><doc /></p:with-input>
         </p:add-attribute>
      </p:declare-step>
      
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The root element is not 'doc'.</s:assert>
               <s:assert test="doc/@avt='text:3'">AVT is not 'text:3'.</s:assert>
             </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>