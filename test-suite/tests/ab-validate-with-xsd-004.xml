<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass"
        features="p-validate-with-xsd">
  <t:info>
    <t:title>ab-validate-with-xsd-004</t:title>
    <t:revision-history>
      <t:revision>
        <t:date>2019-08-01</t:date>
        <t:author>
          <t:name>Achim Berndzen</t:name>
        </t:author>
        <t:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Initial publication</p>
        </t:description>
      </t:revision>
    </t:revision-history>
  </t:info>
  <t:description xmlns="http://www.w3.org/1999/xhtml">
    <p>Test p:validate-with-xml-schema: assert-valid=false.</p>
  </t:description>
  <t:pipeline>
<p:declare-step name="pipeline" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
<p:output port="result"/>

<p:validate-with-xml-schema assert-valid="false">
  <p:with-input port="source">
    <doc>
      <p>Some paragraph.</p>
    </doc>
  </p:with-input>
  <p:with-input port="schema">
    <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
      elementFormDefault="qualified">
      <xs:element name="doc">
        <xs:complexType>
          <xs:sequence>
            <xs:element minOccurs="1" ref="title"/>
            <xs:element minOccurs="0" maxOccurs="unbounded" ref="p"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="title" type="xs:string"/>
      <xs:element name="p" type="xs:string"/>
    </xs:schema> 
  </p:with-input>
</p:validate-with-xml-schema>
</p:declare-step>
</t:pipeline>

  <t:schematron>
    <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
      <s:pattern>
        <s:rule context="/">
          <s:assert test="doc">The element root is not “doc”.</s:assert>
          <s:assert test="doc/p">Element root does not have child 'p'.</s:assert>
        </s:rule>
      </s:pattern>
    </s:schema>
  </t:schematron>
</t:test>
