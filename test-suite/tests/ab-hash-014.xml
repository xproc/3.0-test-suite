   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Testing p:hash matching / is a text result.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:hash value="XML Processing Model Working Group"
                 algorithm="crc"
                 match="/">
            <p:with-input>
               <doc/>
            </p:with-input>
         </p:hash>
         <p:wrap-sequence wrapper="result"/>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="/result">Root element is not wrapper.</s:assert>
               <s:assert test="count(/result/node())=1">Wrapper should have exactly one child.</s:assert>
               <s:assert test="/result/text()='852b1f51'"/>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>