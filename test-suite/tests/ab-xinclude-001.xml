<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:xinclude 001 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-08-25</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Initial tests for p:xinclude. Ported for 1.0 test suite</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:xinclude</p>
   </t:description>
   
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" name="pipeline" version="3.0">
         <p:output port="result"/>
         
         <p:xinclude>
            <p:with-input>
               <document>
                  <xi:include xmlns:xi='http://www.w3.org/2001/XInclude'
                     href="../documents/xpath-xinclude-doc.xml"
                     xpointer="xpath(/doc/p[1])"/>
               </document>
            </p:with-input> 
         </p:xinclude>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="document">Root element is not 'document'.</s:assert>
               <s:assert test="document/p[1]/text()='First p'">Text of first child 'p' is not 'First p'.</s:assert>
               <s:assert test="count(document/p)=1">Document does not have exactly one child 'p'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>