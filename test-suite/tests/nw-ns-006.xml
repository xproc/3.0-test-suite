<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>nw-ns-006</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2025-12-22</t:date>
            <t:author>
               <t:name>Norm Tovey-Walsh</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Initial commit</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Test that local namespace bindings work correctly.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"
                      xmlns:my="http://example.com/"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>

         <p:declare-step type="my:step">
           <p:output port="result"/>
           <p:option xmlns:my="my-ns" name="my:opt1" select="'fail'"/>
           <p:identity xmlns:m="my-ns">
             <p:with-input><result>{$m:opt1}</result></p:with-input>
           </p:identity>
         </p:declare-step>
         
         <my:step>
           <p:with-option name="Q{my-ns}opt1" select="'success'"/>
         </my:step>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result='success'">Document content is incorrect</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
