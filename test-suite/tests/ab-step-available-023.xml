<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>Step available 023 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-12-08</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>Initial test</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests function p:step-available inside a p:library.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                        xmlns:ex="http://extension-step.org"
                        name="main" version="3.0">
            <p:import href="../pipelines/ab-import-library.xpl" />
            <p:output port="result"/>
            
            <ex:tester1 />
        </p:declare-step>
    </t:pipeline>

    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">

            <s:pattern>
                <s:rule context="/">
                    <s:assert test="result">The document root is not “result”.</s:assert>
                    <s:assert test="result/no-body/text()='false'">Value for no-body is wrong.</s:assert>
                    <s:assert test="result/not-visible/text()='true'">Value for not-visible is wrong.</s:assert>
                    <s:assert test="result/visible/text()='true'">Value for visible is wrong.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>