<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0'
        xmlns:err="http://www.w3.org/ns/xproc-error"
        expected="fail" code="err:XS0096">
    <t:title>Option declaration 004</t:title>
    <t:description>
        <p>Tests XS0096 is raised, if option is declared with an incorrect sequence type in @as</p>
    </t:description>
    
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result" />
            <p:option name="option" as="something"/>
            
            <p:identity>
                <p:with-input>
                    <doc>{$option}</doc>
                </p:with-input>
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    <t:option name="option" select="''" />
</t:test>
