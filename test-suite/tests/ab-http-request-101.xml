<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0"  expected="pass">
   <t:info>
      <t:title>http-request-101 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-18</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests multipart request: Two xml documents, no content-type set.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request href="http://localhost:8246/service/echo" method="post" >
            <p:with-input>
               <doc1 />
               <doc2 />
            </p:with-input>
         </p:http-request>
         
         <p:wrap-sequence wrapper="response" />
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="response">The document root is not response.</s:assert>
               <s:assert test="response/doc1">There is no doc1 in response.</s:assert>
               <s:assert test="response/doc2">There is no doc2 in response.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>