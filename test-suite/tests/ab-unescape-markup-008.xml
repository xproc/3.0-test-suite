<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:unescape-markup 008 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-06-23</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests for p:unescape-markup</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:unescape-markup: Document properties are preserved.</p>
   </t:description>
   
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" name="pipeline" version="3.0">
         <p:output port="result"/>
         <p:unescape-markup namespace="http://www.example.org/ns/">
            <p:with-input port="source">
               <p:inline document-properties = "map{'base-uri': 'http://example.test',
                  'additional': 'add'}">
                  <wrapper>&lt;!-- comment -->&lt;?foo bar?>&lt;doc>&lt;p>foo&lt;/p>&lt;/doc></wrapper>
               </p:inline>
            </p:with-input>
         </p:unescape-markup>
         
         <p:identity>
            <p:with-input select="p:document-properties-document(.)" />
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns prefix="c" uri="http://www.w3.org/ns/xproc-step"></s:ns>
         <s:pattern>
            <s:rule context="/">
               <s:assert test="c:document-properties">Root element is not 'document-properties'.</s:assert>
               <s:assert test="c:document-properties/content-type='application/xml'">Property 'content-type' is not 'application/xml'.</s:assert>
               <s:assert test="c:document-properties/additional='add'">Property 'additional' is not 'add'.</s:assert>
               <s:assert test="c:document-properties/base-uri='http://example.test'">Property 'base-uri' is not 'http://example.test'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>