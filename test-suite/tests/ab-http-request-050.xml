<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>http-request-050 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-30</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Changed headers to lower-case.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2020-01-13</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:http-request: parameter 'status-only' = true delivers empty sequence, but headers are present.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request href="http://localhost:8246/service/fixed-xml" 
                         parameters="map{'status-only' : true()}">
            <p:with-input><p:empty /></p:with-input>
         </p:http-request>
         
         <p:identity>
            <p:with-input pipe="report" />
         </p:identity>
         
         <p:identity>
            <p:with-input>
               <header>{.?headers?content-type}</header>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="starts-with(header/text(),'application/xml')">There are no headers.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>