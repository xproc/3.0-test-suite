<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0'
        expected="pass">
    <t:title>Connection 009</t:title>
    <t:description>
        <p>Tests a default connection on inner step is NOT used, when binding is supplied.</p>
    </t:description>
    
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc" xmlns:test="http://test">
            <p:output port="result"/>
            
            <p:declare-step type="test:step">
                <p:output port="result" />
                <p:input port="source">
                    <doc />
                </p:input>
                <p:identity />
            </p:declare-step>
            
            <test:step >
                <p:with-input><doc2/></p:with-input>
            </test:step>
        </p:declare-step>
    </t:pipeline>
    
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="doc2">The root is not doc2.</s:assert>
                    <s:assert test="count(doc/node())=0">The root element does not have no child.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>     
    </t:schematron>
</t:test>
