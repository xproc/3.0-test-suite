<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
    <t:title>Connection 021</t:title>
    <t:description>
        <p>Checks that DRP counts a connection for AVT in @href on p:with-input.</p>
    </t:description>
    
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc" xmlns:test="http://test">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
                    <doc file="../documents/ab-doc.xml"/>
                </p:with-input>
            </p:identity>
           
            <p:identity>
                <p:with-input href="{/doc/@file}" />
            </p:identity>

        </p:declare-step>    
    </t:pipeline>

    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="doc">The root is not doc.</s:assert>
                    <s:assert test="count(doc/node())=0">The root element should have no children.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>     
    </t:schematron>
</t:test>
