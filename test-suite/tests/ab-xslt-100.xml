<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        features="xslt-3"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>AB-xslt-100</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2021-06-10</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added attribute 'queryBinding' to schematron's schema.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2020-06-21</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added tests for @populate-default-collection</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests @populate-default-collection is correctly handled.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:xslt version="3.0"
                 populate-default-collection="false"
                 template-name="start"
                 name="xslt">
            <p:with-input port="source">
               <a/>
               <b/>
               <c/>
               <d/>
            </p:with-input>
            <p:with-input port="stylesheet">
               <xsl:stylesheet version="3.0"
                               xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
                  <xsl:template name="start">
                     <result>
                        <xsl:try>
                           <xsl:value-of select="count(collection())"/>
                           <xsl:catch>
                              <not-defined/>
                           </xsl:catch>
                        </xsl:try>
                     </result>
                  </xsl:template>
               </xsl:stylesheet>
            </p:with-input>
         </p:xslt>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="/result">The document root is not 'result'.</s:assert>
               <s:assert test="/result/not-defined">Root element does not have a child 'not-defined'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>