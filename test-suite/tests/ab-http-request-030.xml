<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>http-request-030 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2020-01-12</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:http-request (Ported from 1.0).</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:http-request: post with text payload to a responder (checking properties).</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:http-request href="http://localhost:8246/service/echo" method="post">
            <p:with-input>
               <p:inline content-type='text/plain'>This is jüst söme encoded text.</p:inline>
            </p:with-input>
         </p:http-request>
         
         <p:identity>
            <p:with-input>
               <result>
                  <base-uri>{p:document-property(., 'base-uri')}</base-uri>
                  <content-type>{p:document-property(., 'content-type')}</content-type>
               </result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
           <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The root element is not 'result'.</s:assert>
               <s:assert test="result/base-uri='http://localhost:8246/service/echo'">The URI is not right.</s:assert>
               <s:assert test="starts-with(result/content-type,'text/plain')">The content type is not right.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>