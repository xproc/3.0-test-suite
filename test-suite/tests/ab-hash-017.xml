<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>hash 017 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-11-19</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Changed test from p:document-properties-document() to p:document-properties()</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-06-14</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Changed test to new ruling on text-documents</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-05-04</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New test for p:hash</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Testing p:hash updates document properties correctly if the result is all text.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:hash value="XML Processing Model Working Group" algorithm="crc" match="comment()">
            <p:with-input >
               <p:inline document-properties="map{'serialization':map{},
                  'bonus-prop':'prop',
                  'base-uri': 'http://base'}">
                  This is a text.
                  <!-- a comment -->
                  This is a text.
               </p:inline>
            </p:with-input>
         </p:hash>
         
         <p:cast-content-type content-type="application/xml">
            <p:with-input select="p:document-properties(.)" />
         </p:cast-content-type>
        
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns prefix="j" uri="http://www.w3.org/2005/xpath-functions"/>
         <s:pattern>
            <s:rule context="/">
               <s:assert test="j:map">Root element is not 'map'.</s:assert>
               <s:assert test="j:map/j:string[@key='base-uri']/text()='http://base'">Base-uri properties is not 'http://base'.</s:assert>
               <s:assert test="j:map/j:string[@key='bonus-prop']/text()='prop'">Property 'bonus-prop' is not preserved.</s:assert>
               <s:assert test="j:map/j:string[@key='content-type']/text()='text/plain'">Content type is not 'text/plain'.</s:assert>
               <s:assert test="not(j:map/j:string[@key='serialization'])">There should be no element 'serialization'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
