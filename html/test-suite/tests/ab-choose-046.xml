<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0"
        xmlns:err="http://www.w3.org/ns/xproc-error"
        expected="fail" code="err:XS0022">
   <t:info>
      <t:title>AB choose-046</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-07-21</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
