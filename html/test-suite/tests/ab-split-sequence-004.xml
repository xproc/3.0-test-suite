<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>p:split-sequence-004 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2021-06-10</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added attribute 'queryBinding' to schematron's schema.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-05-22</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported tests for p:split-sequence</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:split-sequence</p>
   </t:description>
   <t:input port="source">
      <doc/>
   </t:input>
   <t:pipeline>
      <p:declare-step name="pipeline"
                      version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:input port="source"/>
         <p:output port="result"/>
         <p:identity>
            <p:with-input port="source">
               <p:pipe step="pipeline"
                       port="source"/>
               <p:pipe step="pipeline"
                       port="source"/>
               <p:pipe step="pipeline"
                       port="source"/>
            </p:with-input>
         </p:identity>
         <p:split-sequence test="position() &lt;= 2"/>
         <p:count/>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://www.w3.org/ns/xproc-step"
               prefix="c"/>
         <s:pattern>
            <s:rule context="/">
               <s:assert test="c:result">Root element is not 'c:result'.</s:assert>
               <s:assert test="c:result/text()=2">Value of c:result is not 2.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>