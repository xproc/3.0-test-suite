<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" 
        expected="pass" features="os-exec mac/linux">
   <t:info>
      <t:title>p:os-exec-024</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2022-09-23</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests for p:os-exec</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Test for p:os-exec: Tests args are passed correctly.</p>  
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:os-exec command="/bin/echo" args="one two three">
            <p:with-input>
               <p:empty />
            </p:with-input>
         </p:os-exec>
         <p:wrap-sequence wrapper="result" />
       
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
         xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not 'result'.</s:assert>
               <s:assert test="normalize-space(result/text())='one two three'" >Text result is not 'one two three'</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>