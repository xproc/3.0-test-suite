<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
   <t:info>
      <t:title>p:choose-025 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2021-06-10</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added attribute 'queryBinding' to schematron's schema.</p>
            </t:description>
         </t:revision>
         <t:revision>
            <t:date>2019-04-05</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>New tests</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:choose with different XPath contexts (ported from choose #004 of 1.0 test-suite)</p>
   </t:description>
   <t:pipeline>
      <p:declare-step name="pipeline"
                      version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:input port="source">
            <document>
               <title>Some Title</title>
               <para>Some paragraph.</para>
            </document>
         </p:input>
         <p:input port="alternate">
            <document>
               <para>Some alternate paragraph.</para>
            </document>
         </p:input>
         <p:choose>
            <p:when test="//title">
               <p:with-input>
                  <p:pipe step="pipeline"
                          port="alternate"/>
               </p:with-input>
               <p:output port="result"/>
               <p:identity>
                  <p:with-input port="source">
                     <p:inline>
                        <p>Alternate input port contains a //title element.</p>
                     </p:inline>
                  </p:with-input>
               </p:identity>
            </p:when>
            <p:when test="//title">
               <p:with-input>
                  <p:pipe step="pipeline"
                          port="source"/>
               </p:with-input>
               <p:output port="result"/>
               <p:identity>
                  <p:with-input port="source">
                     <p:inline>
                        <p>Source input port contains a //title element.</p>
                     </p:inline>
                  </p:with-input>
               </p:identity>
            </p:when>
            <p:otherwise>
               <p:output port="result"/>
               <p:identity>
                  <p:with-input port="source">
                     <p:inline>
                        <p>no input contains a //title element.</p>
                     </p:inline>
                  </p:with-input>
               </p:identity>
            </p:otherwise>
         </p:choose>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="/p">Root element is not 'p'.</s:assert>
               <s:assert test="/p/text()='Source input port contains a //title element.'">Text in 'p' is not 'Source input port contains a //title element.'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>