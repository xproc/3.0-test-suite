   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Checks 
         <em>no</em> error is raised if more than one document
      appears as connection on 
         <code>p:variable</code> if thereâ€™s no reference
      to the context item.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0"
                      xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result"/>
         <p:variable name="var"
                     select="5">
            <doc/>
            <doc/>
         </p:variable>
         <p:identity>
            <p:with-input>
               <doc>{$var}</doc>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema queryBinding="xslt2"
                xmlns:s="http://purl.oclc.org/dsdl/schematron"
                xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The pipeline root is not doc.</s:assert>
               <s:assert test="doc=5">The root element does not have the correct value</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>